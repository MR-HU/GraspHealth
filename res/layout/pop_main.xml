<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_with_arrow_bg"
    android:orientation="vertical"
    android:padding="0.8dp" >

    <TextView
        android:id="@+id/txt_main_user_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:background="@drawable/pop_item_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="个人中心"
        android:textColor="@color/pop_item_txt_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_main_food_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_item_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="食物追踪"
        android:textColor="@color/pop_item_txt_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_main_sport_fri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_item_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="运动伙伴"
        android:textColor="@color/pop_item_txt_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_main_my_friend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_item_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="我的好友"
        android:textColor="@color/pop_item_txt_color"
        android:textSize="16sp" />
    
    <TextView
        android:id="@+id/txt_main_health_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_item_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="健康中心"
        android:textColor="@color/pop_item_txt_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_main_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_item_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="设置"
        android:textColor="@color/pop_item_txt_color"
        android:textSize="16sp" />

</LinearLayout>