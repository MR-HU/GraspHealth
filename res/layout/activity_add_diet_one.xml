<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <include layout="@layout/app_title_bar" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EAEAEA"
        android:drawableRight="@drawable/arrow_bottom_selector"
        android:padding="15dp"
        android:text="进餐"
        android:textColor="#666666"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_breakfaset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_middle_click"
        android:clickable="true"
        android:padding="15dp"
        android:paddingLeft="30dp"
        android:text="早餐"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_lunch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_middle_click"
        android:clickable="true"
        android:padding="15dp"
        android:text="午餐"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_dinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_middle_click"
        android:clickable="true"
        android:padding="15dp"
        android:text="晚餐"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_middle_click"
        android:clickable="true"
        android:padding="15dp"
        android:text="其他"
        android:textColor="@color/black"
        android:textSize="15sp" />

</LinearLayout>