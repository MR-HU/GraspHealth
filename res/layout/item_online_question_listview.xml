<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_middle_click"
    android:padding="10.0dip" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/image_expert_head"
            android:layout_width="50.0dip"
            android:layout_height="50.0dip"
            android:scaleType="fitXY"
            android:src="@drawable/user_expert_default" />

        <TextView
            android:id="@+id/txt_expert_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_toRightOf="@id/image_expert_head"
            android:textColor="@color/black"
            android:textSize="19.0dip" />

        <TextView
            android:id="@+id/txt_expert_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_expert_name"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="3.0dip"
            android:layout_toRightOf="@id/image_expert_head"
            android:textColor="#999999"
            android:textSize="14.0dip" />
    </RelativeLayout>

</LinearLayout>