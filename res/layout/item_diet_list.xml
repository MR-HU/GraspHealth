<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_middle_click"
    android:orientation="vertical"
    android:paddingBottom="7dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="7dp" >

    <TextView
        android:id="@+id/txt_diet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="南瓜饼"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" >

        <TextView
            android:id="@+id/txt_diet_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1个"
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_diet_calory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/txt_diet_num"
            android:text="75cal"
            android:textColor="#999999"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_diet_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="75"
            android:textColor="#8CD041"
            android:textSize="15sp" />
    </RelativeLayout>

</LinearLayout>