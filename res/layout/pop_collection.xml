<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_with_arrow_bg"
    android:orientation="vertical"
    android:padding="0.8dp" >

    <TextView
        android:id="@+id/txt_collection_dish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:background="@drawable/pop_item_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="菜品"
        android:textColor="@color/pop_item_txt_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_collection_spot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_item_selector"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="运动"
        android:textColor="@color/pop_item_txt_color"
        android:textSize="16sp" />

</LinearLayout>